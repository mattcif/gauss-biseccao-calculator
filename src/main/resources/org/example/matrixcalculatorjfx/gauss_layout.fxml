<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.matrixcalculatorjfx.GaussController"
      spacing="10" alignment="TOP_CENTER" prefWidth="600" prefHeight="400">

    <HBox spacing="10" alignment="CENTER">
        <Label text="Linhas:"/>
        <TextField fx:id="rowsField" promptText="3" prefWidth="50"/>
        <Label text="Colunas:"/>
        <TextField fx:id="colsField" promptText="3" prefWidth="50"/>
        <Button text="Gerar matriz" onAction="#onGenerate"/>
    </HBox>

    <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="250">
        <GridPane fx:id="grid" gridLinesVisible="true" hgap="5" vgap="5">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </GridPane>
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Resolver" onAction="#onSolve"/>
        <Label fx:id="resultLabel" text="Resultado:"/>
    </HBox>

</VBox>
